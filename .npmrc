# Configure npm for better dependency resolution
engine-strict=true
fund=false
legacy-peer-deps=true
prefer-offline=false
package-lock=true

# Registry configuration for PhonePe SDK
registry=https://registry.npmjs.org
@phonepe:registry=https://phonepe.mycloudrepo.io/public/repositories/phonepe-pg-sdk-node/

# Network settings for better reliability on Vercel
fetch-retries=3
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=90000
fetch-timeout=300000

# Cache settings
cache-max=300